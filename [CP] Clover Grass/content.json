{
    "Format": "1.23.0",
"ConfigSchema": {
    "ManualRecolor": {
        "AllowValues": "VPR, Vanilla, Starblue, Earthy",
        "AllowBlank":true,
        "Default": ""
    }
},

"DynamicTokens": [
    {
        "Name": "Recolor",
        "Value": "Vanilla"
        },
        {
        "Name": "Recolor",
        "Value": "Earthy",
        "When": { "HasMod": "DaisyNiko.EarthyRecolour" }
        },
        {
        "Name": "Recolor",
        "Value": "VPR",
        "When": { "HasMod": "grapeponta.VibrantPastoralRecolor" }
        }, 
        {
        "Name": "Recolor",
        "Value": "Starblue",
        "When": { "HasMod": "grapeponta.VibrantPastoralRecolor" }
        },
        {
        "Name": "Recolor",
        "Value": "Starblue",
        "When": { "HasMod": "Lita.StarblueValley","HasMod": "Lita.StarblueValleyUnofficial" }
        }, 
        {
        "Name": "Recolor",
        "Value": "{{ManualRecolor}}",
        "When": { "ManualRecolor |contains=Vanilla, VPR, Earthy, Starblue": true }
        }
    ],

"Changes": [
{   
    "LogName": "Clover Grass",
    "Action": "EditImage",
    "Target": "TerrainFeatures/grass",
    "FromFile": "assets/{{Recolor}}/grass.png"
}
]
}