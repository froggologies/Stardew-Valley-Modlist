{
"Format": "1.25.0",

//The Dynamic tokens and config schema are both borrowed from Seasonal Cute Characters.
"DynamicTokens": [
    //Checks whether the character is inside or outside, for winter outfits.
    {
        "Name": "IndoorVariant",
        "Value": "Indoor",
        "When": {
            "IsOutdoors": "false",
        }
    },
    {
        "Name": "IndoorVariant",
        "Value": "Outdoor",
        "When": {
            "IsOutdoors": "true",
        }
    },
    //Checks if there's a festival happening, for festival outfits.
    {
        "Name": "Festival",
        "Value": "FlowerDance",
        "When": {
            "DayEvent": "Flower Dance",
            "LocationName": "forest, temp",
        }
    },
    {
        "Name": "Festival",
        "Value": "SpiritsEve",
        "When": {
            "DayEvent": "Spirit's Eve",
            "LocationName": "town, temp",
        }
    },
],
"ConfigSchema": {
    "Harvey Has Facial Hair": {
        "AllowValues": "true, false",
        "Default": "true",
        "Description": "When set to false, Harvey will be clean-shaven.",
    },
    "Festival Outfits": {
        "AllowValues": "true, false",
        "Default": "true",
        "Description": "Characters dress up for festivals. Set to the same value as Seasonal Cute Characters.",
    },
    "Extra Outfits": {
        "AllowValues": "true, false",
        "Default": "true",
        "Description": "Characters have work clothes, etc. Set to the same value as Seasonal Cute Characters.",
    },
},


"Changes": [
    //Setting up HD Portraits before we do the fun stuff.
    {
        "Action": "Include",
        "FromFile": "assets/data/redirect.json",
    },


////////////           THE FUN STUFF
    //Beach outfits for the folks who didn't get em.
    {
        "Action": "EditImage",
        "Target": "Mods/talkohSeasonal/Demetrius, Mods/talkohSeasonal/Evelyn, Mods/talkohSeasonal/Gus, Mods/talkohSeasonal/Jas, Mods/talkohSeasonal/Kent, Mods/talkohSeasonal/Lewis, Mods/talkohSeasonal/Vincent",
        "FromFile": "assets/Portraits/Beach/Adds/{{TargetWithoutPath}}_Beach.png",
        "Update": "OnLocationChange",
        "When": {
            "LocationName": "IslandSouth, IslandWest, IslandEast, IslandNorth",
            "Time": "{{Range: 1130, 1820}}",
        }
    },
	
//Extra Outfits outfits.
    //Aerobics class.
    {
        "Action": "EditImage",
        "Target": "Mods/talkohSeasonal/Jodi, Mods/talkohSeasonal/Marnie, Mods/talkohSeasonal/Caroline, Mods/talkohSeasonal/Robin, Mods/talkohSeasonal/Emily, Mods/talkohSeasonal/Harvey",
        "FromFile": "assets/Portraits/{{TargetWithoutPath}}/{{TargetWithoutPath}}_Aerobics.png",
        "Update": "OnLocationChange",
        "When": {
            "DayOfWeek": "Tuesday",
            "LocationName": "SeedShop",
            "Extra Outfits": "true",
            "Weather": "sun, wind, snow",
        }
    },
    {
        "Action": "EditImage",
        "Target": "Mods/talkohSeasonal/Jodi, Mods/talkohSeasonal/Marnie, Mods/talkohSeasonal/Caroline, Mods/talkohSeasonal/Robin, Mods/talkohSeasonal/Emily, Mods/talkohSeasonal/Harvey",
        "FromFile": "assets/Portraits/{{TargetWithoutPath}}/{{TargetWithoutPath}}_Aerobics.png",
        "Update": "OnLocationChange",
        "When": {
            "Time": "{{Range: 1100, 1500}}",
            "Hearts:Harvey": "{{range: 6, 14}}",
            "LocationName": "SeedShop",
            "Extra Outfits": "true",
            "HasSeenEvent: currentPlayer |contains=58": false,
        }
    },

    //Work clothes.
        //Harvey
    {
        "Action": "EditImage",
        "Target": "Mods/talkohSeasonal/Harvey",
        "FromFile": "assets/Portraits/Harvey/Harvey_Hospital.png",
        "Update": "OnLocationChange",
        "When": {
            "LocationName": "Hospital",
            "Extra Outfits": "true",
        },
    },
        //Shane
    {
        "Action": "EditImage",
        "Target": "Mods/talkohSeasonal/Shane",
        "FromFile": "assets/Portraits/Shane/Shane_Joja.png",
        "Update": "OnLocationChange",
        "When": {
            "HasSeenEvent: currentPlayer |contains=191393": false,
            "LocationName": "JojaMart",
            "Extra Outfits": "true",
        },
    },
        //Sam
    {
        "Name": "Sam's Work Outfit - at Joja",
        "Action": "EditImage",
        "Target": "Mods/talkohSeasonal/Sam",
        "FromFile": "assets/Portraits/Sam/Sam_Work.png",
        "Update": "OnLocationChange",
        "When": {
            "HasSeenEvent: currentPlayer |contains=191393": false,
            "LocationName": "JojaMart",
            "Extra Outfits": "true",
            "DayOfWeek": "Monday, Wednesday,"
        },
    },
    {
        "Name": "Sam's Work Outfit - at Museum",
        "Action": "EditImage",
        "Target": "Mods/talkohSeasonal/Sam",
        "FromFile": "assets/Portraits/Sam/Sam_Work.png",
        "Update": "OnLocationChange",
        "When": {
            "HasSeenEvent: currentPlayer |contains=191393": true,
            "LocationName": "ArchaeologyHouse",
            "Extra Outfits": "true",
            "DayOfWeek": "Monday, Wednesday,"
        },
    },
        //Clint. If Extra Outfits is false, then he's always wearing his work stuff.
    {
        "Name": "Clint's Work Outfit - only sometimes option",
        "Action": "EditImage",
        "Target": "Mods/talkohSeasonal/Clint",
        "FromFile": "assets/Portraits/Clint/Clint_{{Season}}_Work.png",
        "Update": "OnLocationChange",
        "When": {
            "LocationName": "Blacksmith",
            "Extra Outfits": "true",
        },
    },
    {
        "Name": "Clint's Work Outfit - always option",
        "Action": "EditImage",
        "Target": "Mods/talkohSeasonal/Clint",
        "FromFile": "assets/Portraits/Clint/Clint_{{Season}}_Work.png",
        "When": {
            "Extra Outfits": "false",
        },
    },


//Festival outfits.
    {
        "LogName": "Festival Portraits",
        "Action": "EditImage",
        "Target": "Mods/talkohSeasonal/Abigail, Mods/talkohSeasonal/Alex, Mods/talkohSeasonal/Caroline, Mods/talkohSeasonal/Clint, Mods/talkohSeasonal/Demetrius, Mods/talkohSeasonal/Elliott, Mods/talkohSeasonal/Emily, Mods/talkohSeasonal/Evelyn, Mods/talkohSeasonal/George, Mods/talkohSeasonal/Gus, Mods/talkohSeasonal/Haley, Mods/talkohSeasonal/Harvey, Mods/talkohSeasonal/Jas, Mods/talkohSeasonal/Jodi, Mods/talkohSeasonal/Kent, Mods/talkohSeasonal/Leah, Mods/talkohSeasonal/Lewis, Mods/talkohSeasonal/Linus, Mods/talkohSeasonal/Marnie, Mods/talkohSeasonal/Maru, Mods/talkohSeasonal/Pam, Mods/talkohSeasonal/ParrotBoy, Mods/talkohSeasonal/Penny, Mods/talkohSeasonal/Pierre, Mods/talkohSeasonal/Robin, Mods/talkohSeasonal/Sam, Mods/talkohSeasonal/Sandy, Mods/talkohSeasonal/Sebastian, Mods/talkohSeasonal/Shane, Mods/talkohSeasonal/Vincent, Mods/talkohSeasonal/Willy",
