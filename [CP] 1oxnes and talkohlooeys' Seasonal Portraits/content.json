        },
    },
        //SCC doesn't load this, and I don't think Gunther goes anyway, but no harm in loading it. His sprite matches well enough. :)
    {
        "Action": "EditImage",
        "Target": "Mods/talkohSeasonal/Gunther",
        "FromFile": "assets/Portraits/Festivals/FlowerDance/{{TargetWithoutPath}}_FlowerDance.png",
        "When": {
            "Festival Outfits": "true",
            "DayEvent": "Flower Dance",
            "HasMod |contains=FlashShifter.StardewValleyExpandedCP": false,
        },
    },
	
	//Harvey's stache.
    {
        "Action": "EditImage",
        "PatchMode": "Overlay",
        "Target": "Mods/talkohSeasonal/Harvey",
        "FromFile": "assets/Portraits/{{TargetWithoutPath}}/MustacheOverlay.png",
        "When": {
            "Harvey Has Facial Hair": "true",
        },
    },
    {
        "Action": "EditImage",
        "PatchMode": "Overlay",
        "Target": "Mods/talkohSeasonal/Harvey_Beach",
        "FromFile": "assets/Portraits/Beach/{{TargetWithoutPath}}_MustacheOverlay.png",
